<?xml version="1.0" encoding="UTF-8"?>

<TestScript xmlns="http://hl7.org/fhir">
    <name value="createPatient"/>
    <fixture id="example-patient">
        <resource>
            <reference value="Patient/patient-example.xml"/>
        </resource>
    </fixture>
    <variable>
        <name value="V1"/>
        <headerField value="Location"/>
        <sourceId value="R1"/>
    </variable>
    <setup>
        <action>
            <operation>
                <label value="create"/>
                <type>
                    <code value="create"/>
                </type>
                <sourceId value="example-patient"/>
<!--                <url value="http://localhost:9999/fhir/Patient"/>-->
                <responseId value="R1"/>
            </operation>
        </action>
    </setup>
    <test>
        <action>
            <operation>
                <type>
                    <code value="read"/>
                </type>
                <accept value="json"/>
                <responseId value="R2"/>
                <url value="${V1}"/>
            </operation>
        </action>
        <action>
            <assert>
                <response value="forbidden"/>
                <warningOnly value="false"/>
            </assert>
        </action>
    </test>
</TestScript>
